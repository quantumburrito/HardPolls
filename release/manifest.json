{
  "manifest_version": 3,
  "name": "Hard Polls",
  "version": "1.0",
  "description": "Replaces all instances of 'election' with 'erection' on web pages.",
  "permissions": ["activeTab"],
  "host_permissions": ["<all_urls>"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "16": "./icon16.png",
    "48": "./icon48.png",
    "128": "./icon128.png"
  },
  "action": {
    "default_icon": "icon48.png",
    "default_title": "Hard Polls is active!"
  }
}